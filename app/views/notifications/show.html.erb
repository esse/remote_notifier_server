<p id="notice"><%= notice %></p>

<p>
  <b>Client:</b>
  <%= @notification.client_id %>
</p>

<p>
  <b>Message:</b>
  <%= @notification.message %>
</p>

<p>
  <b>Class of message:</b>
  <%= @notification.msg_class %>
</p>

<p>
  <b>Number of occurences:</b>
  <%= @notification.children.count + 1 %>
</p>

<p>
  <b>Datetime of occurences:</b>
  <%= @notification.created_at.strftime("%H:%M %d-%m-%Y") %>
  <% @notification.children.each do |children| %>
     | <%= children.created_at.strftime("%H:%M %d-%m-%Y") %>
  <% end %>
</p>

<p>
  <b>Backtrace:</b>
  <%= @notification.backtrace.gsub("\n", "<br />").html_safe %>
</p>

<%= link_to 'Back', client_notifications_path(@notification.client) %>
